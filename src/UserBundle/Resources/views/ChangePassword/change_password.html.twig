{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} • Mon profil • Modification de mot de passe
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('fos_user_profile_show') }}">Mon profil</a></li>
    <li class="breadcrumb-item active">Modification de mot de passe</li>
{% endblock %}

{% block body %}
    <h1>Modifier mon mot de passe</h1>
    <hr>

    <div class="offset-md-2 col-md-8">
        <form action="{{ path("fos_user_change_password") }}"method="post">
            {{ form_widget(form._token) }}

            <div class="form-group row">
                <label for="example-text-input" class="col-md-4 col-form-label">Mot de passe actuel</label>
                <div class="col-md-8">
                    <input type="password" id="fos_user_change_password_form_current_password" name="fos_user_change_password_form[current_password]" class="form-control" placeholder="Mot de passe actuel" required="required" />
                </div>
            </div>

            <div class="form-group row">
                <label for="example-text-input" class="col-md-4 col-form-label">Nouveau mot de passe</label>
                <div class="col-md-8">
                    <input type="password" id="fos_user_change_password_form_plainPassword_first" name="fos_user_change_password_form[plainPassword][first]" class="form-control" placeholder="Nouveau mot de passe" required="required" />
                </div>
            </div>

            <div class="form-group row">
                <label for="example-text-input" class="col-md-4 col-form-label">Répéter le mot de passe</label>
                <div class="col-md-8">
                    <input type="password" id="fos_user_change_password_form_plainPassword_second" name="fos_user_change_password_form[plainPassword][second]" class="form-control" placeholder="Répéter" required="required" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <input type="submit" id="submit" name="submit" class="mt-1 btn btn-lg btn-primary btn-block" value="Valider" />
                </div>
            </div>
        </form>
    </div>
{% endblock %}