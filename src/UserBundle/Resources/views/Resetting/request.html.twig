{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} • Mot de passe oublié
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets output='css/signin.css' '@UserBundle/Resources/public/css/signin.css' %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Mot de passe oublié</li>
{% endblock %}

{% block body %}
    <form action="{{ path("fos_user_resetting_send_email") }}" class="form-signin" method="post">
        <h2 class="form-signin-heading">Réinitialisation</h2>

        <input type="text" id="username" name="username" class="form-control" placeholder="Pseudo" required="required" />

        <input type="submit" id="submit" name="submit" class="mt-1 btn btn-lg btn-primary btn-block" value="Réinitialiser" />
    </form>
{% endblock %}