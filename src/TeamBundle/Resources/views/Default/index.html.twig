{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} • Gestion de mon équipe
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item activ">Mon équipe</li>
{% endblock %}

{% block body %}
    <div class="m-b-2">
        <div class="col-md-4 bg-inverse p-a-2 text-xs-center">
            <i class="fa fa-tag"></i> {{ team.name }}
        </div>

        <div class="col-md-4 bg-inverse p-a-2 text-xs-center">
            <i class="fa fa-calendar"></i> {{ team.inscriptionDate | date("d/m/Y") }}
        </div>

        <div class="col-md-4 bg-inverse p-a-2 text-xs-center">
            {% if team.valid %}
                <span class="text-success"><i class="fa fa-check"></i> Validée</span>
            {% else %}
                <span class="text-danger"><i class="fa fa-close"></i> Non validée</span>
            {% endif %}
        </div>

        <div class="clearfix"></div>
    </div>
{% endblock %}