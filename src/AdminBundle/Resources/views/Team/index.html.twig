{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} • Administration • Gestion des équipes
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('admin_homepage') }}">Administration</a></li>
    <li class="breadcrumb-item active">Gestion des équipes</li>
{% endblock %}

{% block body %}
    <h1>Gestion des équipes</h1>
    <hr>

    <div class="table-responsive">
    <table id="table_team" class="table table-striped table-hover mt-1">
        <thead class="thead-inverse">
            <tr>
                <th>Nom</th>
                <th>Composition</th>
                <th class="text-xs-center">Validée</th>
                <th class="text-xs-center">Paiement</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="table_teams_tbody">
        {% for team in array_teams %}
            {% include 'AdminBundle:Team:teamRow.html.twig' %}
        {% else %}
            <tr>
                <td colspan="5"><i>Aucune équipe</i></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts output='js/compiled/admin/team.js'
    '@AdminBundle/Resources/public/js/team.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}