{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} • Administration • Gestion des équipes
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('admin_homepage') }}">Administration</a></li>
    <li class="breadcrumb-item active">Gestion des équipes</li>
{% endblock %}

{% block body %}
    <h1>Gestion des équipes</h1>
    <hr>

    <div class="bg-inverse text-white p-1">
        <input id="input_search_text" class="form-control" type="text" placeholder="Rechercher une équipe, un personnage, ...">

        <div class="row">
            <div class="col-md-6">
                <div>
                    <label class="custom-control custom-checkbox">
                        <input id="input_search_edition_only" type="checkbox" class="custom-control-input" checked="checked">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">N'afficher que les équipes inscrites pour cette édition</span>
                    </label>
                </div>

                <div>
                    <label>Rechercher dans : </label>
                    <select id="select_search_search_in" class="custom-select">
                        <option value="both" selected>Joueurs et équipes</option>
                        <option value="team">Equipes seulement</option>
                        <option value="player">Joueurs uniquement</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">
                <button id="btn_search" class="btn btn-outline-primary pull-right mt-1"><i class="fa fa-search"></i> Rechercher</button>
            </div>
        </div>

        <div class="clearfix"></div>
    </div>

    <div class="table-responsive">
    <table id="table_team" class="table table-striped table-hover mt-1">
        <thead class="thead-inverse">
            <tr>
                <th>Nom</th>
                <th>Composition</th>
                <th class="text-xs-center">Validée</th>
                <th class="text-xs-center">Paiement</th>
                <th class="text-xs-center">Compo valide</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="table_teams_tbody">
            {% include 'AdminBundle:Team:teamTable.html.twig' %}
        </tbody>
    </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts output='js/compiled/admin/team.js'
    '@AdminBundle/Resources/public/js/team.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}