<div class="col-md-6" data-id="{{ match.id }}">
    <div class="card {% if match.matchResult %}card-outline-success{% else %}card-outline-danger{% endif %} matchCard">
        <div class="card-header">
            <span class="text-danger">{{ match.attack.name }}</span> <b>VS</b> <span class="text-primary">{{ match.defense.name }}</span>
            <span class="pull-xs-right">
                <a href="{{ path('admin_match_feuille', {'id':match.id}) }}"><i class="fa fa-file-text" data-toggle="tooltip" data-trigger="hover" title="Editer la feuille de match" role="button"></i></a>
            </span>
        </div>
        <div class="card-block">
            <div class="card-text">
                <div class="row">
                    <div class="col-md-6 editable_content">
                        <h6>Date</h6>
                        <hr>

                        <div class="editDate">
                            {% if match.date %}
                                {{ match.date|format_date('dd MMMM yyyy - HH:mm') }}
                            {% else %}
                                <i>Aucune date pour le moment</i>
                            {% endif %}
                            <i class="fa fa-pencil editable_tool invisible" data-toggle="tooltip" data-trigger="hover" title="Modifier la date" role="button" data-action="edit" data-id="{{ match.id }}"></i>
                        </div>
                    </div>

                    <div class="col-md-6 editable_content">
                        <h6>Arbitre</h6>
                        <hr>

                        <div class="editArbitre">
                            {% if match.arbitre %}
                                {{ match.arbitre.username }}
                            {% else %}
                                <i>Aucun arbitre pour le moment</i>
                            {% endif %}
                            <i class="fa fa-pencil editable_tool invisible" data-toggle="tooltip" data-trigger="hover" title="Modifier la date" role="button" data-action="edit" data-id="{{ match.id }}"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>