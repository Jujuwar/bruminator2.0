<div data-id="{{ match.id }}">
    <div class="card matchCard">
        <div class="card-header">
            <span {% if match.attack %}class="text-danger"{% endif %}>
                {% if match.attack %}{{ match.attack.name }}{% else %}Team inconnue pour le moment{% endif %}
            </span>
            <b>VS</b>
            <span {% if match.defense %}class="text-primary"{% endif %}>
                {% if match.defense %}{{ match.defense.name }}{% else %}Team inconnue pour le moment{% endif %}
            </span>
        </div>
        <div class="card-block">
            <div class="card-text">
                <div class="row">
                    <div class="col-md-6">
                        <h6 {% if match.attack %}class="text-danger"{% endif %}>{% if match.attack %}Disponibilités {{ match.attack.name }}{% else %}Team inconnue pour le moment{% endif %}</h6>
                        <hr>
                        <div class="text-justify">
                            {% if match.attack %}
                                {{ match.attack.available|nl2br }}
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 {% if match.defense %}class="text-primary"{% endif %}>{% if match.defense %}Disponibilités {{ match.defense.name }}{% else %}Team inconnue pour le moment{% endif %}</h6>
                        <hr>
                        <div class="text-justify">
                            {% if match.defense %}
                                {{ match.defense.available|nl2br }}
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6 editable_content">
                        <h6>Date</h6>
                        <hr>

                        <div class="editDate">
                            {% if match.date %}
                                {{ match.date|format_date('dd MMMM yyyy - HH:mm') }}
                            {% else %}
                                <i>Aucune date pour le moment</i>
                            {% endif %}
                            <i class="fa fa-pencil editable_tool invisible" data-toggle="tooltip" data-trigger="hover" title="Modifier la date" role="button" data-action="edit" data-id="{{ match.id }}"></i>
                        </div>
                    </div>

                    <div class="col-md-6 editable_content">
                        <h6>Arbitre</h6>
                        <hr>

                        <div class="editArbitre">
                            {% if match.arbitre %}
                                {{ match.arbitre.username }}
                            {% else %}
                                <i>Aucun arbitre pour le moment</i>
                            {% endif %}
                            <i class="fa fa-pencil editable_tool invisible" data-toggle="tooltip" data-trigger="hover" title="Modifier la date" role="button" data-action="edit" data-id="{{ match.id }}"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>