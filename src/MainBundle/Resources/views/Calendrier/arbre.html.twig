{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Arbre des phases finales</h1>
    <hr>

    {{ dump(matchs) }}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table-sm" style="width:100%">
                    <tr>
                        <td class="col-md-3" style="float:none;">
                            <div class="form-control">{% if matchs and matchs.0 %}{{ matchs.0.attack }}{% else %}Inconnu{% endif %}</div>
                        </td>

                        <td class="col-md-1" rowspan="2" style="padding:0px; float:none; position:relative; min-width:50px;">
                            <div style="border-top: 2px solid {% if matchs and matchs.0 and matchs.0.matchResult.winner == matchs.attack %}#090{% else %}black{% endif %}; border-right: 2px solid #090; width:80%; height:25%; float: left; position:absolute; top:25%;"></div>
                            <div style="border-bottom: 2px solid #f00; border-right: 2px solid #f00; width:80%; height:25%; float: left; position:absolute; top:50%;"></div>
                            <div style="border-top: 2px solid #090; width: 20%; margin-left: 80%; float: right; position:absolute;"></div>
                        </td>

                        <td class="col-md-2" style="float:none;" rowspan="2">
                            <div class="form-control">{% if matchs and matchs.4 %}{{ matchs.4.attack }}{% else %}Inconnu{% endif %}</div>
                        </td>

                        <td class="col-md-1" rowspan="4" style="padding:0px; float:none; position:relative; min-width:50px;">
