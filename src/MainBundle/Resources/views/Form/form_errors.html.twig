{# form_errors.html.twig #}
{% block form_errors %}
    {% spaceless %}
        {% if errors is defined and errors|length > 0 %}
            {% for error in errors %}
                {{ error.message|trans }}
                {%  if not loop.last %}
                    <br>
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}